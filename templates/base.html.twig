<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}
            Traoùvé
        {% endblock %}
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>


<body>
{% block header %}
    <div class="fixed-top d-flex flex-column flex-md-row align-items-center p-3 px-md-4 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal">
        <span class="fa-stack fa-lg text-primary">
          <i class="fa fa-square fa-stack-2x"></i>
          <i class="fa fa-search fa-stack-1x fa-inverse"></i>
        </span>
            <a href="{{ path('homepage') }}" style="color: black">Traoùvé</a>
        </h5>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" href="{{ path('homepage') }}">Accueil</a>
            {% if app.user %}
                <a class="p-2 text-dark" href="#">Déposer une annonce</a>
            {% endif %}
            <a class="p-2 text-dark" href="{{ path('traobject_newlost') }}">Objets perdus</a>
            <a class="p-2 text-dark" href="{{ path('traobject_newfound') }}">Objets trouvés</a>
        </nav>
        {% if app.user %}
            <span class="btn btn-outline-info"><i
                        class="fa fa-sign-in "> </i> Bonjour {{ app.user.firstname }} ! </span>

        {% else %}
            <a class="btn btn-outline-primary" href="{{ path('app_login') }}">
                <i class="fa fa-sign-in"></i>
                Se connecter
            </a>
            <a class="btn btn-outline-primary" href="{{ path('user_registration') }}">
                <i class="fa fa-user-plus"></i>
                Créer un compte
            </a>
        {% endif %}

        {% if app.user %}
            <span class="fa-stack fa-lg text-primary"></span>
            <li style="list-style: none">
                <a class="btn btn-outline-primary" href="{{ path('app_logout') }}">
                    <i class="fa fa-sign-out"></i>
                    Se déconnecter
                </a>
            </li>
        {% endif %}

    </div>
{% endblock %}
<main class="main-content">
    {% block body %}{% endblock %}
</main>
{% block footer %}
    <div class="container">
        <footer class="pt-4 my-md-5 pt-md-5 border-top">
            <div class="row">
                <div class="col-12 col-md">
                    <h5 class="my-0 mr-md-auto font-weight-normal">
                    <span class="fa-stack fa-lg text-primary">
                      <i class="fa fa-square fa-stack-2x"></i>
                      <i class="fa fa-search fa-stack-1x fa-inverse"></i>
                    </span>
                        <a href="{{ path('homepage') }}" style="color: black">Traoùvé</a>
                    </h5>
                    <small class="d-block mb-3 text-muted">&copy; 2017-2018</small>
                </div>
                <div class="col-6 col-md">

                    {{ render(controller('App\\Controller\\CategoryController::allCategories')) }}

                </div>
                <div class="col-6 col-md">
                    {{ render(controller('App\\Controller\\CountyController::allCounties')) }}
                </div>
                <div class="col-6 col-md">
                    <h5>Notre entreprise</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="#">Equipe</a></li>
                        <li><a class="text-muted" href="#">Contact</a></li>
                        <li><a class="text-muted" href="#">Mentions légales</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
